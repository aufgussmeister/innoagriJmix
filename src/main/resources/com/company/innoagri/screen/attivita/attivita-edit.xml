<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://attivitaEdit.caption"
        focusComponent="form">
    <data>
        <instance id="attivitaDc"
                  class="com.company.innoagri.entity.Attivita">
            <fetchPlan extends="_base">
                <property name="collaboratore" fetchPlan="_base"/>
                <property name="lavorazione" fetchPlan="_base"/>
                <property name="appezzamenti" fetchPlan="_base">
                    <property name="varieta" fetchPlan="_base"/>
                </property>
                <property name="mezzo" fetchPlan="_base"/>
                <property name="fattura" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="appezzamentiDc" property="appezzamenti"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="attivitaDc">
                <column width="350px">
                    <textField id="oreCollaboratoreField" property="oreCollaboratore"/>
                    <textArea id="noteField" property="note" rows="5"/>
                    <entityPicker id="collaboratoreField" property="collaboratore">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="qtaField" property="qta"/>
                    <timeField id="oraInizioField" property="oraInizio"/>
                    <timeField id="oraFineField" property="oraFine"/>
                    <textField id="durataField" property="durata"/>
                    <textField id="valoreField" property="valore"/>
                    <comboBox id="unitaMisuraField" property="unitaMisura"/>
                    <entityPicker id="lavorazioneField" property="lavorazione">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <dateField id="dataField" property="data"/>
                    <textField id="prezzoField" property="prezzo"/>
                    <checkBox id="verificatoField" property="verificato"/>
                    <checkBox id="daFatturareField" property="daFatturare"/>
                    <checkBox id="fatturatoField" property="fatturato"/>
                    <entityPicker id="mezzoField" property="mezzo">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="fatturaField" property="fattura">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                </column>
            </form>
            <groupBox id="appezzamentiBox" caption="msg://com.company.innoagri.entity/Attivita.appezzamenti">
                <table id="appezzamentiTable" dataContainer="appezzamentiDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="denominazione"/>
                        <column id="comune"/>
                        <column id="annoImpianto"/>
                        <column id="annoSovrainnesto"/>
                        <column id="superficie"/>
                        <column id="distanzaAcqua"/>
                        <column id="distanzaTraPiante"/>
                        <column id="distanzaTraFilari"/>
                        <column id="irrigato"/>
                        <column id="tipoIrrigazione"/>
                        <column id="note"/>
                        <column id="tenant"/>
                        <column id="varieta"/>
                    </columns>
                    <buttonsPanel>
                        <button action="appezzamentiTable.add"/>
                        <button action="appezzamentiTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
