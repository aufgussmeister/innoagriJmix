<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://fitosanitarioEdit.caption"
        focusComponent="form">
    <data>
        <instance id="fitosanitarioDc"
                  class="com.company.innoagri.entity.Fitosanitario">
            <fetchPlan extends="_base">
                <property name="fitosanitarioNazionale" fetchPlan="_base"/>
                <property name="avversita" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="avversitaDc" property="avversita"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="fitosanitarioDc">
                <column width="350px">
                    <entityPicker id="fitosanitarioNazionaleField" property="fitosanitarioNazionale">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="prodottoField" property="prodotto"/>
                    <textField id="impresaField" property="impresa"/>
                    <textField id="attivitaField" property="attivita"/>
                    <textField id="doseMinimaField" property="doseMinima"/>
                    <textField id="doseMassimaField" property="doseMassima"/>
                    <comboBox id="unitaMisuaField" property="unitaMisua"/>
                    <textArea id="noteField" property="note" rows="5"/>
                </column>
            </form>
            <groupBox id="avversitaBox" caption="msg://com.company.innoagri.entity/Fitosanitario.avversita">
                <table id="avversitaTable" dataContainer="avversitaDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="nome"/>
                        <column id="note"/>
                    </columns>
                    <buttonsPanel>
                        <button action="avversitaTable.add"/>
                        <button action="avversitaTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
