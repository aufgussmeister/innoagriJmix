<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://movimentoFitosanitarioEdit.caption"
        focusComponent="form">
    <data>
        <instance id="movimentoFitosanitarioDc"
                  class="com.company.innoagri.entity.MovimentoFitosanitario">
            <fetchPlan extends="_base">
                <property name="causale" fetchPlan="_base"/>
                <property name="fitosanitario" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="movimentoFitosanitarioDc">
                <column width="350px">
                    <entityPicker id="causaleField" property="causale">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="fitosanitarioField" property="fitosanitario">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="quantitaField" property="quantita"/>
                    <textField id="valoreField" property="valore"/>
                    <textArea id="noteField" property="note" rows="5"/>
                    <dateField id="dataField" property="data"/>
                    <textField id="quantitaMinField" property="quantitaMin"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
